@model SmartReservation.Model.Restaurant
@{
    ViewData["Title"] = "Update Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="content" role="main" class="main">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-sm mb-2 mb-sm-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-no-gutter">
                            <li class="breadcrumb-item"><span class="breadcrumb-link">Restaurant</span></li>
                            <li class="breadcrumb-item active" aria-current="page">Update</li>
                        </ol>
                    </nav>

                    <h1 class="page-header-title">Update Restaurant</h1>
                </div>
            </div>
        </div>

        <!-- For Validation -->
        <!-- End For Validation -->
        <div class="content container-fluid">
            <form class="js-validate" id="form1" method="post" asp-action="Update" asp-controller="Restaurant">
                <div class="card">
                    <div class="card-header">
                        <p class="card-header-title">Details</p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <!-- Form Group -->
                                <div class="form-group">
                                    <label for="txtName" class="input-label">Name</label>
                                    <div class="js-form-message mb-3">
                                        <input id="txtName" type="text" class="form-control" required="required"
                                               placeholder="Name" aria-label="Current Value" asp-for="Name" value="@Model.Name">
                                    </div>
                                </div>
                                <!-- End Form Group -->
                                <div class="form-group">
                                    <label for="Address" class="input-label">Location</label>
                                    <div class="js-form-message mb-3">
                                        <input id="Address" type="text" class="form-control" required="required"
                                               placeholder="Name" aria-label="Current Value" asp-for="Location" value="@Model.Location">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-sm-6">
                                <!-- Form Group -->
                                <div class="form-group">
                                    <label for="txtPhone" class="input-label">Phone</label>
                                    <div class="js-form-message mb-3">
                                        <input id="txtPhone" type="text" class="form-control" required="required"
                                               placeholder="Phone" aria-label="Current Value" asp-for="Phone" value="@Model.Phone">
                                    </div>
                                </div>
                                <!-- End Form Group -->
                                <div class="form-group">
                                    <label for="RegistrationLabel" class="input-label">Active</label>
                                    <div class="custom-control custom-checkbox-switch mr-2">
                                        <input type="checkbox" id="VehicleTailLiftCheck" class="custom-control-input custom-checkbox-switch-input" asp-for="Active">
                                        <label class="custom-checkbox-switch-label btn" for="VehicleTailLiftCheck">
                                            <span class="custom-checkbox-switch-default">
                                                <i class="fas fa-active"></i> No
                                            </span>
                                            <span class="custom-checkbox-switch-active">
                                                <i class="tio-done mr-1"></i> Yes
                                            </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.restaurantID)
                        <div class="w-100"></div>
                        <!-- End Form -->
                    </div>
                    <!-- Footer -->
                    <div class="card-footer d-flex justify-content-end">
                        <a class="btn btn-white" href="@Url.Action("Restaurants", "Restaurant")">Cancel</a>
                        <input type="submit" value="Save" class="btn btn-primary ml-2" id="btnSave" />
                    </div>
                    <!-- End Footer -->
                </div>
            </form>
        </div>
    </div>
</main>

@section scripts{
<script>
    $('#txtPhone').keyup(function(e){
          if (/\D/g.test(this.value))
          {
            this.value = this.value.replace(/\D/g, '');
          }
    });
</script>
}

