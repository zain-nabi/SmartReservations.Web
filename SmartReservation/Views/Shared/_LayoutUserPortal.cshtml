<body class="d-flex align-items-center min-h-100">
    <!-- ========== HEADER ========== -->
    <header class="position-absolute top-0 left-0 right-0 mt-3 mx-3">
        <div class="d-flex d-lg-none justify-content-between">
            <span>
                <img src="~/front-dashboard-v1.1/dist/assets/img/logo/smart-reservations.png" style="min-width: 7rem; max-width: 7rem;" alt=""/>
            </span>
        </div>
    </header>
    <!-- ========== END HEADER ========== -->
    <!-- ========== MAIN CONTENT ========== -->
    <main id="content" role="main" class="main pt-0">
        <!-- Content -->
        <div class="container-fluid px-3">
            <div class="row">
                <!-- Cover -->
                <div class="col-lg-6 d-none d-lg-flex justify-content-center align-items-center min-vh-lg-100 position-relative bg-light px-0">
                    <!-- Logo & Language -->
                    <div class="position-absolute top-0 left-0 right-0 mt-3 mx-3">
                        <div class="d-none d-lg-flex justify-content-between">
                            <span>
                                <img class="w-100" src="~/front-dashboard-v1.1/dist/assets/img/logo/smart-reservations.png" alt="Image Description" style="min-width: 7rem; max-width: 7rem;">
                            </span>
                        </div>
                    </div>
                    <!-- End Logo & Language -->

                    <div style="max-width: 23rem;">
                        @*<div class="text-center mb-5">
                            <img class="img-fluid" src="~/front-dashboard-v1.1/dist/assets/svg/illustrations/chat.svg" alt="Image Description" style="width: 12rem;">
                        </div>*@

                        <div class="mb-5">
                            <h2 class="display-4 text-danger">Smart.Reservations</h2>
                        </div>

                        <!-- List Checked -->
                        <ul class="list-checked list-checked-lg list-checked-primary list-unstyled-py-4">
                            <li class="list-checked-item">
                                <span class="d-block font-weight-bold mb-1">Orders</span>
                                Every taste has a story.
                            </li>

                            <li class="list-checked-item">
                                <span class="d-block font-weight-bold mb-1">Reservations</span>
                                On time serving is our passsion.
                            </li>
                        </ul>
                        <!-- End List Checked -->
                        <!-- End Row -->
                    </div>
                </div>
                <!-- End Cover -->

                @RenderBody()
            </div>
            <!-- End Row -->
        </div>
        <!-- End Content -->
    </main>
    <!-- ========== END MAIN CONTENT ========== -->
    <!-- JS Implementing Plugins -->
@*<script src="~/front-dashboard-v1.1/dist/assets/js/vendor.min.js"></script>*@
<script src="~/front-dashboard-v1.1/dist/assets/vendor/jquery/dist/jquery.min.js"></script>
